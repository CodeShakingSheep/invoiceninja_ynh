{
    "name": "InvoiceNinja",
    "id": "invoiceninja",
    "packaging_format": 1,
    "description": {
        "en": "Create and email invoices, track payments and expenses, and time tasks"
    },
    "version": "4.5.45~ynh1",
    "url": "https://invoiceninja.org",
    "upstream": {
        "license": "AAL",
        "website": "https://invoiceninja.org",
        "demo": "https://app.invoiceninja.com/dashboard",
        "admindoc": "https://docs.invoiceninja.com/index.html",
        "code": "https://github.com/invoiceninja/invoiceninja"
    },
    "license": "AAL",
    "maintainer": {
        "name": "Sebastian Gumprich",
        "email": "yunohost AT gumpri DOT ch",
        "url": "https://github.com/YunoHost-Apps/invoiceninja_ynh/"
    },
    "requirements": {
        "yunohost": ">= 4.1.3"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php7.3-fpm",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/invoiceninja",
                "default": "/invoiceninja"
            },
            {
                "name": "admin",
                "type": "user",
                "example": "johndoe"
            },
            {
                "name": "language",
                "type": "string",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": ["fr", "en"],
                "default": "en"
            }
        ]
    }
}
